.main__body__messages
  .main__message
    .main__message__name
      = message.user.name
    .main__message__date
      = message.created_at
  .main2__message
    - if message.body.present?
      %p.main2__body
        = message.body
    = image_tag message.image.url, class: 'main2__image' if message.image.present?
