.main__body__messages{ message_id: message.id}
  .main__message
    .main__message__name
      = message.user.name
    .main__message__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .main__message__body
      = message.body
  .main2__message
    - if message.body.present?
      %p.main2__body
    = image_tag message.image.url, class: 'main2__image' if message.image.present?
